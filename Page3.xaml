<Page x:Class="practos3_2.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:practos3_2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page3"
      Loaded="Page_Loaded">

    <Grid>
        <DataGrid x:Name="ThirdGrid" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding service_date}" Header="Дата службы"/>
                <DataGridTextColumn Binding="{Binding Priest.first_name}" Header="Имя"/>
                <DataGridTextColumn Binding="{Binding Priest.last_name}" Header="Фамилия"/>
                <DataGridTextColumn Binding="{Binding Priest.middle_name}" Header="Отчество"/>
                <DataGridTextColumn Binding="{Binding Priest.ierarch_position}" Header="Позиция в иерархии"/>
                <DataGridTextColumn Binding="{Binding Church.name}" Header="Название церкви"/>
                <DataGridTextColumn Binding="{Binding Church.address}" Header="Адрес"/>
                <DataGridTextColumn Binding="{Binding Church.established_date}" Header="Дата постройки"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
